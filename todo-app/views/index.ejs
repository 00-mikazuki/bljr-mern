<%- include('partials/header') %>
  <div class="table-container">
    <h2 class="todo-title">Todo List</h2>
    <div>
      <a href="/add" class="btn">Add todo</a>
    </div>
    <br>

    <table>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Actions</th>
      </tr>
      <% todos.map((todo) => { %>
        <tr>
          <td><%= todo.title %></td>
          <td><%= todo.description %></td>
          <td><%= moment(todo.createdAt).format('MMM DD, YYYY, HH:mm:ss') %></td>
          <td><%= moment(todo.updatedAt).format('MMM DD, YYYY, HH:mm:ss') %></td>
          <td>
            <a href="/edit/<%= todo.id %>" class="btn">Edit</a>
            <a href="/delete/<%= todo.id %>" class="btn">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>
<%- include('partials/footer') %>